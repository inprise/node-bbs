h2= title

form(action='/register', method='POST')

	table.formtable
		tr
			td
				label(for='user_name') Username:
			td
				input(type='text', id='user_name', name='user[name]', required='required')
		tr
			td
				label(for='user_email') Email:
			td
				input(type='email', id='user_email', name='user[email]', required='required')
		tr
			td
				label(for='user_emailconf') Confirm Email:
			td
				input(type='text', id='user_emailconf', name='user[emailconf]',  required='required')
		tr
			td
				label(for='user_pass') Password:
			td
				input(type='password', id='user_pass', name='user[pass]', required='required')
		tr
			td
				label(for='user_passconf') Confirm Password:
			td
				input(type='password', id='user_passconf', name='user[passconf]', required='required')
		tr
			td(colspan='2')
				button#cancelbtn(type='button') Cancel
				input(type='submit')
