@import 'colours'


table
	border-collapse collapse

td
	padding 5px



table.grid:before, table.vgrid:before
	content " "
	position absolute
	z-index -1
	top -5px
	left -5px
	right -5px
	bottom -5px
	border 5px solid $bg-offwhite

table.grid
	position relative
	border-collapse collapse
	border 1px solid $bg-medium
	width: 900px

table.grid tr:nth-child(2n)
	background $bg

table.grid tr:nth-child(2n+1)
	background $bg-offwhite

table.grid thead tr:nth-child(1), table.grid tfoot tr:nth-child(1)
	background $bg-light
	color $txt-dark
	font-weight bold

table.grid td
	padding 10px

table.grid thead
	border-bottom 1px solid $bg-medium

table.grid tfoot
	font-size: 0.8em
	border-top 1px solid $bg-medium




table.vgrid
	position relative
	border-collapse collapse
	border-left 1px solid $bg-medium
	border-right 1px solid $bg-medium
	border-bottom 1px solid $bg-medium

table.vgrid tr:nth-child(2n)
	background $bg

table.vgrid tr:nth-child(2n+1)
	background $bg-offwhite

table.vgrid td:first-child
	background $bg-light
	color $txt-dark
	font-weight bold
	text-align right

table.vgrid td
	padding 10px

table.vgrid tr:first-child
	border-top 1px solid $bg-medium




table.formtable td:first-child
	text-align right

