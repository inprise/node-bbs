@import 'colours'

table:before
	content " "
	position absolute
	z-index -1
	top -5px
	left -5px
	right -5px
	bottom -5px
	border 5px solid $bg-offwhite

table
	position relative
	border-collapse collapse
	border 1px solid $bg-medium
	width: 900px

tr:nth-child(2n)
	background $bg

tr:nth-child(2n+1)
	background $bg-offwhite

thead tr:nth-child(1), tfoot tr:nth-child(1)
	background $bg-light
	color $txt-dark
	font-weight bold


td
	padding 10px


thead
	border-bottom 1px solid $bg-medium

tfoot
	font-size: 0.8em
	border-top 1px solid $bg-medium
